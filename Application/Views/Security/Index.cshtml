    <script>
        var base = '@Url.Content("~/")';

        $(document).keypress(function (event) {
            var keycode = (event.keyCode ? event.keyCode : event.which);
            if (keycode == '13') {
                if (IsFrmValid()) {
                    $.ajax({
                        type: "POST",
                        url: base + "Security/GetLogin",
                        dataType: "JSON",
                        contentType: "application/json;charset=utf-8",
                        async: false,
                        data: JSON.stringify({ "UserID": $("#txtUserId").val(), "Password": $("#txtPassword").val() }),
                        success: function (data) {
                            console.log(data);
                            if (data.isCompleted == true) {
                                window.location.href = data.redirectUrl;
                            } else {
                                ShowMessageBox_OKFailed(data.sMessage, "Warning", "");
                                //alert("Login Failed");
                            }
                        },
                        error: function (xhr) {
                            //alert("Login Failed");
                            alert(xhr.status);
                            ShowMessageBox_OKFailed("Error : Login operation failed." + xhr.status, "Exception Error", "");
                        }
                    });
                } else {
                    ShowMessageBox_OKFailed("Login operation failed.", "Warning", "");
                }
            }
        });

        $(document).ready(function () {
            $('#btnSubmit').click(function (e) {
                e.preventDefault();
                if (IsFrmValid()) {
                    $.ajax({
                        type: "POST",
                        url: base + "Security/GetLogin",
                        dataType: "JSON",
                        contentType: "application/json;charset=utf-8",
                        async: false,
                        data: JSON.stringify({ "UserID": $("#txtUserId").val(), "Password": $("#txtPassword").val() }),
                        success: function (data) {
                            console.log(data);
                            if (data.isCompleted == true) {
                                window.location.href = data.redirectUrl;
                            } else {
                                ShowMessageBox_OKFailed(data.sMessage, "Warning", "");
                                //alert("Login Failed");
                            }
                        },
                        error: function (xhr) {
                            ////alert("Login Failed");
                            //alert(xhr.status);
                            ShowMessageBox_OKFailed("Error : Login operation failed." + xhr.status, "Exception Error", "");
                        }
                    });
                } else {
                    ShowMessageBox_OKFailed("Login operation failed.", "Warning", "");
                }
            });

        });

        function IsFrmValid() {
            var isValidItem = true;

            if ($('#txtUserId').val() == "") {
                isValidItem = false;
                //$('#Err_ItemCategory').show();
            }
            else {
                //$('#Err_ItemCategory').hide();
            }

            if ($('#txtPassword').val() == "") {
                isValidItem = false;
                //$('#Err_ItemCategory').show();
            }
            else {
                //$('#Err_ItemCategory').hide();
            }

            if (!isValidItem) {
                ShowWarningMsg("Please fill the mandatory fields.");
                //alert("Please fill the mandatory fields.");
            }

            return isValidItem;
        }
    </script>
